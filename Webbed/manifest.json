{
  "manifest_version": 3,
  "name": "Webbed",
  "version": "1.0",
  "description": "Client-Side Script Security Inspector",
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo128x128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
   "background": {
    "service_worker": "background.js"
  }
}
