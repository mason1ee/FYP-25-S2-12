{
  "manifest_version": 3,
  "name": "Webbed | FYP-25-S2-12",
  "version": "1.0",
  "description": "Client-Side Script Security Inspector",
  "icons": {
    "128": "Assets/logo/logo128x128.png",
    "48": "Assets/logo/logo48x48.png",
    "16": "Assets/logo/logo16x16.png"
  },
  "declarative_net_request": {
    "rule_resources": [
      { "id": "ruleset_1", "enabled": true, "path": "rules.json" }
    ]
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "Assets/logo/logo128x128.png"
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "webRequest",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["preload-darkmode.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["libs/acorn.min.js", "content.js", "libs/jspdf.umd.min.js"],
      "run_at": "document_idle"
    }
  ]
}
